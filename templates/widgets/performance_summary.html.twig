{# Widget de résumé de performance amélioré #}
<div class="card mb-3 shadow-sm">
    <div class="card-header bg-{{ header_color|default('primary') }} text-white">
        <h5 class="card-title mb-0">
            <i class="fa {{ header_icon|default('fa-chart-bar') }}"></i> {{ title }}
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Section Taux Physique -->
            <div class="col-md-6">
                <div class="text-center mb-3">
                    <div class="d-flex justify-content-center align-items-center mb-2">
                        <span class="badge bg-light text-dark fs-5 px-3 py-2 shadow-sm">
                            <i class="fa {{ physique_icon }} me-1 text-{{ physique_color }}"></i> {{ physique_taux }}%
                        </span>
                    </div>
                    <h6 class="text-muted mb-1">Taux Physique</h6>
                    <div class="d-flex justify-content-center">
                        <span class="badge bg-light text-dark">
                            {{ realisees }}/{{ prevues }} réalisées
                        </span>
                    </div>
                </div>
            </div>
            
            <!-- Section Taux Financier -->
            <div class="col-md-6">
                <div class="text-center mb-3">
                    <div class="d-flex justify-content-center align-items-center mb-2">
                        <span class="badge bg-light text-dark fs-5 px-3 py-2 shadow-sm">
                            <i class="fa {{ financier_icon }} me-1 text-{{ financier_color }}"></i> {{ financier_taux }}%
                        </span>
                    </div>
                    <h6 class="text-muted mb-1">Taux Financier</h6>
                    <div class="small text-muted">
                        <div>{{ budget_reel|number_format(0, ',', ' ') }} FCFA</div>
                        <div>sur {{ budget_prevu|number_format(0, ',', ' ') }} FCFA</div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Section Activités en cours -->
        {% if en_cours is defined %}
        <div class="row">
            <div class="col-12">
                <div class="alert alert-{{ en_cours > 0 ? 'info' : 'secondary' }} mb-0 text-center">
                    <i class="fa fa-clock me-1"></i> 
                    <strong>{{ en_cours }}</strong> activité{{ en_cours > 1 ? 's' : '' }} en cours
                </div>
            </div>
        </div>
        {% endif %}
        
        <!-- Barre de progression globale -->
        <div class="row mt-3">
            <div class="col-12">
                <div class="progress" style="height: 8px;">
                    <div class="progress-bar bg-{{ physique_color }}" role="progressbar" 
                         style="width: {{ physique_taux }}%" 
                         aria-valuenow="{{ physique_taux }}" 
                         aria-valuemin="0" 
                         aria-valuemax="100">
                    </div>
                </div>
                <small class="text-muted text-center d-block mt-1">
                    Progression physique: {{ physique_taux }}%
                </small>
            </div>
        </div>
    </div>
</div>
