{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block breadcrumb %}
<ul class="breadcrumb">
	<li class="breadcrumb-item"><a href="#">UTILISATEUR</a></li>
	<li class="breadcrumb-item"><a href="{{ path('app_profile') }}">PROFIL</a></li>
	<li class="breadcrumb-item active">CHANGER MOT DE PASSE</li>
</ul>
{% endblock %}

{% block page_title %}
<h1 class="page-header">
	Changer le mot de passe <small>Modification du mot de passe</small>
</h1>
{% endblock %}

{% block buttons %}
<a href="{{ path('app_profile') }}" class="btn btn-secondary btn-sm">
	<i class="fa fa-arrow-left"></i> Retour au profil
</a>
{% endblock %}

{% block body %}
<div class="row">
	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">
				{% for message in app.flashes('success') %}
					<div class="alert alert-success alert-dismissible fade show" role="alert">
						{{ message }}
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				{% endfor %}

				{% for message in app.flashes('error') %}
					<div class="alert alert-danger alert-dismissible fade show" role="alert">
						{{ message }}
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				{% endfor %}

				{{ form_start(form) }}
					<div class="row">
						<div class="col-md-12">
							<label for="{{ form.currentPassword.vars.id }}" class="form-label">{{ form.currentPassword.vars.label }}</label>
							<div class="position-relative">
								{{ form_widget(form.currentPassword) }}
								<button type="button" class="btn btn-link position-absolute end-0 top-0 h-100" onclick="togglePassword('{{ form.currentPassword.vars.id }}')" style="z-index: 10; border: none; background: none;">
									<i class="fa fa-eye" id="{{ form.currentPassword.vars.id }}-toggle-icon"></i>
								</button>
							</div>
							{{ form_errors(form.currentPassword) }}
						</div>
					</div>
					<div class="row mt-3">
						<div class="col-md-6">
							<label for="{{ form.plainPassword.first.vars.id }}" class="form-label">{{ form.plainPassword.first.vars.label }}</label>
							<div class="position-relative">
								{{ form_widget(form.plainPassword.first) }}
								<button type="button" class="btn btn-link position-absolute end-0 top-0 h-100" onclick="togglePassword('{{ form.plainPassword.first.vars.id }}')" style="z-index: 10; border: none; background: none;">
									<i class="fa fa-eye" id="{{ form.plainPassword.first.vars.id }}-toggle-icon"></i>
								</button>
							</div>
							{{ form_errors(form.plainPassword.first) }}
						</div>
						<div class="col-md-6">
							<label for="{{ form.plainPassword.second.vars.id }}" class="form-label">{{ form.plainPassword.second.vars.label }}</label>
							<div class="position-relative">
								{{ form_widget(form.plainPassword.second) }}
								<button type="button" class="btn btn-link position-absolute end-0 top-0 h-100" onclick="togglePassword('{{ form.plainPassword.second.vars.id }}')" style="z-index: 10; border: none; background: none;">
									<i class="fa fa-eye" id="{{ form.plainPassword.second.vars.id }}-toggle-icon"></i>
								</button>
							</div>
							{{ form_errors(form.plainPassword.second) }}
						</div>
					</div>
					<div class="row mt-3">
						<div class="col-md-12">
							<button type="submit" class="btn btn-primary">
								<i class="fa fa-save"></i> Enregistrer
							</button>
						</div>
					</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>
{% endblock %}
